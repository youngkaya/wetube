doctype html
html(lang="ko")
  head 
    title #{pageTitle} | #{siteName}
    link(rel="stylesheet" href="https://unpkg.com/mvp.css")
  body
    header 
      nav
        ul 
          li 
            a(href="/") Home
          li
            a(href="/search") Search
          li 
            a(href="/videos/upload") Upload Video
          if loggedIn
            li 
              a(href="/users/edit") #{loggedInUser.username}'s Profile
            li 
              a(href="/users/logout") Logout
          else
            li 
              a(href="/join") Join
            li 
              a(href="/login") Login
      h1=pageTitle
      
    main
      block content
  include partials/footer.pug